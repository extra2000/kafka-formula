[Unit]
Requires=zookeeper.service
After=zookeeper.service

[Service]
Type=simple
User=kafka
ExecStart=/opt/kafka_{{ pillar['kafka']['scalaversion'] }}-{{ pillar['kafka']['version'] }}/bin/kafka-server-start.sh /opt/kafka_{{ pillar['kafka']['scalaversion'] }}-{{ pillar['kafka']['version'] }}/config/server.properties
ExecStop=/opt/kafka_{{ pillar['kafka']['scalaversion'] }}-{{ pillar['kafka']['version'] }}/bin/kafka-server-stop.sh
Restart=on-abnormal

[Install]
WantedBy=multi-user.target
